            {
              "id": "c_sx1a",
              "left": { "type": "variable", "variableId": "var_diMinus" },
              "operator": "crossunder",
              "right": { "type": "variable", "variableId": "var_diPlus" }
            }
          ]
        },
        {
          "id": "g_sx2",
          "conditions": [
            {
              "id": "c_sx2a",
              "left": { "type": "variable", "variableId": "var_adx" },
