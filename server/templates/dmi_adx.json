    "commissionType": "percent",
    "slippage": 0
  },
  "signals": {
    "longEntry": {
      "enabled": true,
      "groups": [
        {
          "id": "g_le1",
          "conditions": [
            {
              "id": "c_le1a",
              "left": { "type": "variable", "variableId": "var_diPlus" },
              "operator": "crossover",
              "right": { "type": "variable", "variableId": "var_diMinus" }
            },
            {
              "id": "c_le1b",
              "left": { "type": "variable", "variableId": "var_adx" },
              "operator": "gt",
              "right": { "type": "input", "inputName": "adxThreshold" }
            }
          ]
        }
      ],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    },
    "longExit": {
      "enabled": true,
      "groups": [
        {
          "id": "g_lx1",
          "conditions": [
            {
              "id": "c_lx1a",
              "left": { "type": "variable", "variableId": "var_diPlus" },
              "operator": "crossunder",
              "right": { "type": "variable", "variableId": "var_diMinus" }
            }
          ]
        },
        {
          "id": "g_lx2",
          "conditions": [
            {
              "id": "c_lx2a",
              "left": { "type": "variable", "variableId": "var_adx" },
              "operator": "lt",
              "right": { "type": "constant", "value": 20 }
            }
          ]
        }
      ],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    },
    "shortEntry": {
