{
  "name": "EMA SMA Cross",
  "settings": {
    "initialCapital": 10000,
    "currency": "USD",
    "orderSize": 100,
    "orderType": "percent",
    "pyramiding": 0,
    "commission": 0.1,
    "commissionType": "percent",
    "slippage": 0
  },
  "signals": {
    "longEntry": {
      "enabled": true,
      "groups": [
        {
          "id": "g1",
          "conditions": [
            {
              "id": "c1",
              "left": { "type": "variable", "variableId": "var_fastMA" },
              "operator": "crossover",
              "right": { "type": "variable", "variableId": "var_slowMA" }
            },
            {
              "id": "c2",
              "left": { "type": "variable", "variableId": "var_spread" },
              "operator": "gt",
              "right": { "type": "constant", "value": 0 }
            }
          ]
        }
      ],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    },
    "longExit": {
      "enabled": true,
      "groups": [
        {
          "id": "g2",
          "conditions": [
            {
              "id": "c3",
              "left": { "type": "variable", "variableId": "var_fastMA" },
              "operator": "crossunder",
              "right": { "type": "variable", "variableId": "var_slowMA" }
            }
          ]
        }
      ],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    },
    "shortEntry": {
      "enabled": true,
      "groups": [
        {
          "id": "sg_se1",
          "conditions": [
            {
              "id": "sc_se1a",
              "left": { "type": "variable", "variableId": "var_fastMA" },
              "operator": "crossunder",
              "right": { "type": "variable", "variableId": "var_slowMA" }
            },
            {
              "id": "sc_se1b",
              "left": { "type": "variable", "variableId": "var_spread" },
              "operator": "lt",
              "right": { "type": "constant", "value": 0 }
            }
          ]
        }
      ],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    },
    "shortExit": {
      "enabled": true,
      "groups": [
        {
          "id": "sg_sx1",
          "conditions": [
            {
              "id": "sc_sx1a",
              "left": { "type": "variable", "variableId": "var_fastMA" },
              "operator": "crossover",
              "right": { "type": "variable", "variableId": "var_slowMA" }
            }
          ]
        }
      ],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    }
  },
  "variables": [
    {
      "id": "var_fastMA",
      "name": "fastMA",
      "type": "indicator",
      "indicator": "ema",
      "params": {
        "source": "close",
        "period": { "type": "input", "inputName": "fastPeriod" }
      }
    },
    {
      "id": "var_slowMA",
      "name": "slowMA",
      "type": "indicator",
      "indicator": "sma",
      "params": {
        "source": "close",
        "period": { "type": "input", "inputName": "slowPeriod" }
      }
    },
    {
      "id": "var_spread",
      "name": "spread",
      "type": "expression",
      "expression": {
        "type": "binary",
        "operator": "-",
        "left": { "type": "variable", "variableId": "var_fastMA" },
        "right": { "type": "variable", "variableId": "var_slowMA" }
      }
    }
  ],
  "inputs": [
    {
      "id": "input_fastPeriod",
      "name": "fastPeriod",
      "type": "int",
      "default": 9,
      "min": 1
    },
    {
      "id": "input_slowPeriod",
      "name": "slowPeriod",
      "type": "int",
      "default": 21,
      "min": 1
    }
  ]
}
