{
  "name": "MACD Crossover",
  "settings": {
    "initialCapital": 10000,
    "currency": "USD",
    "orderSize": 100,
    "orderType": "percent",
    "pyramiding": 0,
    "commission": 0.1,
    "commissionType": "percent",
    "slippage": 0
  },
  "signals": {
    "longEntry": {
      "enabled": true,
      "groups": [
        {
          "id": "g1",
          "conditions": [
            {
              "id": "c1",
              "left": { "type": "variable", "variableId": "var_macdLine" },
              "operator": "crossover",
              "right": { "type": "variable", "variableId": "var_signalLine" }
            }
          ]
        }
      ],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    },
    "longExit": {
      "enabled": true,
      "groups": [
        {
          "id": "g2",
          "conditions": [
            {
              "id": "c2",
              "left": { "type": "variable", "variableId": "var_macdLine" },
              "operator": "crossunder",
              "right": { "type": "variable", "variableId": "var_signalLine" }
            }
          ]
        }
      ],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    },
    "shortEntry": {
      "enabled": false,
      "groups": [],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    },
    "shortExit": {
      "enabled": false,
      "groups": [],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    }
  },
  "variables": [
    {
      "id": "var_macdLine",
      "name": "macdLine",
      "type": "indicator",
      "indicator": "macd",
      "params": {
        "source": "close",
        "fastLength": { "type": "input", "inputName": "fastLength" },
        "slowLength": { "type": "input", "inputName": "slowLength" },
        "signalLength": { "type": "input", "inputName": "signalLength" }
      },
      "outputIndex": 0
    },
    {
      "id": "var_signalLine",
      "name": "signalLine",
      "type": "indicator",
      "indicator": "macd",
      "params": {
        "source": "close",
        "fastLength": { "type": "input", "inputName": "fastLength" },
        "slowLength": { "type": "input", "inputName": "slowLength" },
        "signalLength": { "type": "input", "inputName": "signalLength" }
      },
      "outputIndex": 1
    }
  ],
  "inputs": [
    {
      "id": "input_fastLength",
      "name": "fastLength",
      "type": "int",
      "default": 12,
      "min": 1
    },
    {
      "id": "input_slowLength",
      "name": "slowLength",
      "type": "int",
      "default": 26,
      "min": 1
    },
    {
      "id": "input_signalLength",
      "name": "signalLength",
      "type": "int",
      "default": 9,
      "min": 1
    }
  ]
}
