{
  "name": "RSI Mean Reversion",
  "settings": {
    "initialCapital": 10000,
    "currency": "USD",
    "orderSize": 100,
    "orderType": "percent",
    "pyramiding": 0,
    "commission": 0.1,
    "commissionType": "percent",
    "slippage": 0
  },
  "signals": {
    "longEntry": {
      "enabled": true,
      "groups": [
        {
          "id": "g1",
          "conditions": [
            {
              "id": "c1",
              "left": { "type": "variable", "variableId": "var_myRSI" },
              "operator": "lt",
              "right": { "type": "input", "inputName": "oversold" }
            }
          ]
        }
      ],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    },
    "longExit": {
      "enabled": true,
      "groups": [
        {
          "id": "g2",
          "conditions": [
            {
              "id": "c2",
              "left": { "type": "variable", "variableId": "var_myRSI" },
              "operator": "gt",
              "right": { "type": "input", "inputName": "overbought" }
            }
          ]
        }
      ],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    },
    "shortEntry": {
      "enabled": true,
      "groups": [
        {
          "id": "g3",
          "conditions": [
            {
              "id": "c3",
              "left": { "type": "variable", "variableId": "var_myRSI" },
              "operator": "gt",
              "right": { "type": "input", "inputName": "overbought" }
            }
          ]
        }
      ],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    },
    "shortExit": {
      "enabled": true,
      "groups": [
        {
          "id": "g4",
          "conditions": [
            {
              "id": "c4",
              "left": { "type": "variable", "variableId": "var_myRSI" },
              "operator": "lt",
              "right": { "type": "input", "inputName": "oversold" }
            }
          ]
        }
      ],
      "exitSettings": { "takeProfitEnabled": false, "stopLossEnabled": false }
    }
  },
  "variables": [
    {
      "id": "var_myRSI",
      "name": "myRSI",
      "type": "indicator",
      "indicator": "rsi",
      "params": {
        "source": "close",
        "period": { "type": "input", "inputName": "rsiPeriod" }
      }
    }
  ],
  "inputs": [
    {
      "id": "input_rsiPeriod",
      "name": "rsiPeriod",
      "type": "int",
      "default": 14,
      "min": 1
    },
    {
      "id": "input_overbought",
      "name": "overbought",
      "type": "int",
      "default": 65,
      "min": 50,
      "max": 100
    },
    {
      "id": "input_oversold",
      "name": "oversold",
      "type": "int",
      "default": 35,
      "min": 0,
      "max": 50
    }
  ]
}
